<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<div class="container">

    <div class="jumbotron" style="text-align:center">
        <h1>Registrar alumno</h1>
    </div>
    
    <div class="errors-container hidden">
        <ul class="errors"></ul>
    </div>
    
    <div class="success-container hidden">
        <h1 class="success"></h1>
    </div>
    
    <form id="aluform" class="admin-form" method="post" action="">
    
        <div class="form-group">
            <label for="clase">Clase</label>
            <select name="clase" id="clase" class="form-control">
                <option value="">selecciona una clase</option>
                <option value="soib">soib</option>
                <option value="robótica">robótica</option>
                <option value="prl">prl</option>
            </select>
        </div>

        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Introduce el nombre">
            <p id="name-error" class="input-error"></p>
        </div>
    
        <div class="form-group">
            <label for="apellios">Apellidos</label>
            <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Introduce apellidos">
            <p id="lastname-error" class="input-error"></p>
        </div>

        <div class="form-group">
            <label for="fechaNac">Fecha de nacimiento</label>
            <input type="date" class="form-control" id="fecha-nacimiento" name="fechaNac" >
            <p id="password-error" class="input-error"></p>
        </div>
                
        <div class="form-group">
            <label for="dni">DNI</label>
            <input type="text" class="form-control" id="dni" name="dni" placeholder="Introduce el dni">
            <p id="password-error" class="input-error"></p>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Introduce email">
            <p id="email-error" class="input-error"></p>
        </div>

        <div class="form-group">
            <label for="tel">Teléfono</label>
            <input type="tel" class="form-control" id="tel" name="tel" placeholder="Introduce el teléfono">
            <p id="password-error" class="input-error"></p>
        </div>

        <button  class="submit btn btn-primary">Registrar</button>
    
    </form>

</div>

<%- include('./partials/footer.ejs') %>
